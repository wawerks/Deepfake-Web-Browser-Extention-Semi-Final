{
  "manifest_version": 3,
  "name": "AI Image Deepfake Guard",
  "version": "2.0.1",
  "description": "Detect deepfake or AI-generated images with real-time scanning and right-click detection.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "notifications",
    "storage",
    "webRequest",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "https://*.facebook.com/*",
    "https://*.fbcdn.net/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Image Guard",
    "default_icon": {
      "16": "icon1.jpg",
      "48": "icon2.jpg",
      "128": "icon3.jpg"
    }
  },
  "icons": {
    "16": "icon1.jpg",
    "48": "icon2.jpg",
    "128": "icon3.jpg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["cropper.min.js", "content-main.js"],
      "css": ["cropper.min.css", "styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.facebook.com/*"],
      "js": ["content-facebook.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["cropper.min.js", "cropper.min.css", "icon1.jpg", "icon2.jpg", "icon3.jpg", "icons/*.png"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' http://localhost:8000 http://127.0.0.1:8000 https://*.facebook.com;"
  }
}
